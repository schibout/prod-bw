<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>VR01_LD_EmailOuTelephone</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
				ISBLANK(Email),
				ISBLANK(Phone),
				 $User.USER_ByPassRegleValidation__c = FALSE
				)</errorConditionFormula>
    <errorMessage>Attention, vous devez obligatoirement renseigner l&apos;adresse email ou le numéro de téléphone du contact.</errorMessage>
</ValidationRule>
